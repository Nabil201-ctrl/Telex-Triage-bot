{
    "compilerOptions": {
        /* Basic settings */
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./dist",
        /* Type safety */
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        /* Module interop & modern syntax */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        /* Node 16+ typing (for import.meta, etc.) */
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        /* Source maps (for better debugging in dist) */
        "sourceMap": true
    },
    "include": [
        "server/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}